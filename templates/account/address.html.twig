{% extends 'base.html.twig' %}

{% block title %}Mes adresses - La Boutique Hurlea{% endblock %}

{% block content %}
    <a href="{{ path('account_address_add') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Mes adresses</h1>
    <hr>
    - <a href="{{ path('account') }}">Retourner à mon compte</a><br>
    <hr>
    {% if app.user.adresses | length ==0 %}
        <p class="text-center">
            Vous n'avez pas encore ajouté d'addresses dans votre compte clien. Pour en ajouter une, veuillez <a
                    href="{{ path('account_address_add') }}">Cliquez
                ici</A>
        </p>
    {% else %}
        <div class="row">
            {% for address in app.user.adresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ address.name }}</h5>
                            <p class="card-text">
                                {{ address.address }},<br>
                                {{ address.postal }} - {{ address.city }} - {{ address.country }}
                            </p>
                            <a href="{{ path('account_address_edit', {'id':address.id}) }}">Modifier</a> | <a
                                    href="{{ path('account_address_delete', {'id':address.id}) }}">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
